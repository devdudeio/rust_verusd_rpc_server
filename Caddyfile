# Caddyfile for Verus RPC Proxy with Automatic HTTPS
#
# This configuration sets up Caddy as a reverse proxy with automatic TLS.
# Caddy will automatically obtain and renew Let's Encrypt certificates.

# Replace 'your-domain.com' with your actual domain
your-domain.com {
    # Automatic HTTPS - Caddy handles certificate management

    # Reverse proxy to the Rust RPC server
    reverse_proxy localhost:8080 {
        # Health check configuration
        health_uri /health
        health_interval 10s
        health_timeout 5s

        # Forward client's real IP address
        header_up X-Real-IP {remote_host}
        header_up X-Forwarded-For {remote_host}
        header_up X-Forwarded-Proto {scheme}
    }

    # Security headers (in addition to those set by the Rust app)
    header {
        # Enable HSTS
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"

        # Remove server identification
        -Server
    }

    # Logging
    log {
        output file /var/log/caddy/verus-rpc.log
        format json
    }
}

# Alternative: Development/Testing with self-signed certificate
# localhost:443 {
#     tls internal
#     reverse_proxy localhost:8080
# }

# Alternative: Multiple domains or subdomains
# api.your-domain.com {
#     reverse_proxy localhost:8080
# }
